{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyActionsOutsideAllowedRegions",
      "Effect": "Deny",
      "NotAction": [
        "iam:*",
        "route53:*",
        "sso:*",
        "sts:*",
        "organizations:*",
        "support:*"
      ],
      "Resource": "*",
      "Condition": {
        "StringNotEquals": {
          "aws:RequestedRegion": [
            "ap-northeast-1",
            "us-east-1"
          ]
        }
      }
    },
    {
      "Sid": "DenyNonAllowedServicesInVirginia",
      "Effect": "Deny",
      "NotAction": [
        "acm:*",
        "budgets:*",
        "ce:*",
        "cloudfront:*",
        "iam:*",
        "kms:*",
        "route53:*",
        "sso:*",
        "sts:*",
        "wafv2:*",
        "organizations:*",
        "support:*"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": "us-east-1"
        }
      }
    }
  ]
}